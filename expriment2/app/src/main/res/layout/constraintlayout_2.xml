<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tab_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon_space_stations"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/space_station_icon"
                android:contentDescription="Space Stations" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space Stations"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF"> <ImageView
            android:id="@+id/icon_flights"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/rocket_icon"
            android:contentDescription="Flights" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flights"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon_rovers"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rover_icon"
                android:contentDescription="Rovers" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rovers"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination_selector_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tab_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_dca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DCA"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/green_rounded_bg" /> <ImageView
        android:id="@+id/icon_double_arrows"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/double_arrows"
        android:contentDescription="Transfer" />

        <TextView
            android:id="@+id/text_mars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MARS"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/green_rounded_bg" /> </LinearLayout>

    <LinearLayout
        android:id="@+id/trip_type_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/destination_selector_layout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_one_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Way"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/orange_rounded_bg" /> <View
        android:id="@+id/circle_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/white_circle_shape" /> </LinearLayout>

    <TextView
        android:id="@+id/traveler_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Traveller"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/orange_rounded_bg" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/trip_type_layout"
        app:layout_constraintStart_toStartOf="@id/trip_type_layout" />

    <Button
        android:id="@+id/depart_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="DEPART"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/graphics_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/traveler_count_text"
        app:layout_constraintBottom_toTopOf="@id/depart_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_galaxy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/galaxy"
            android:contentDescription="Galaxy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/icon_small_rocket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/rocket_icon"
            android:rotation="-45"
            android:contentDescription="Departing rocket"
            app:layout_constraintBottom_toBottomOf="@id/icon_galaxy"
            app:layout_constraintEnd_toStartOf="@id/icon_galaxy"
            app:layout_constraintTop_toTopOf="@id/icon_galaxy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.75" /> </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>